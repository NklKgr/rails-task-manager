<h1>Your Tasks:</h1>
<ol>
  <% @tasks.each do |task| %>
    <li><h4><%= link_to task.title, task_path(task)  %> </h4>
      <h5><%= task.details %></h5>
      <h5>done? <%= task.completed%></h5>  //
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ol>
<%= link_to 'NEW TASK', tasks_new_path  %>


